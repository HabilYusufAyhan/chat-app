<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title><%- title %> </title>

    <!-- Custom fonts for this template-->
    <link href="/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/admin/css/sb-admin-2.min.css" rel="stylesheet">

</head>
<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <% if (locals.validation_error !=undefined || locals.success_message !=undefined ||
                                    locals.login_error !=undefined) { %>
                                    <%- include('./partials/_mesaj') %>
                                        <% } %>
                                            <h1 class="h4 text-gray-900 mb-2">Yeni Şifre</h1>
                                            <p class="mb-4">Lütfen yeni şifrenizi oluşturun</p>
                            </div>
                            <form class="user" action="/reset-password" method="post">
                                <div class="form-group">
                                    <input type="password" value="<%= typeof oldsifre != 'undefined' ? oldsifre : ''%>"
                                        name="oldsifre" class="form-control form-control-user" id="exampleInputEmail"
                                        aria-describedby="emailHelp" placeholder="Eski şifrenizi girin">
                                </div>
                                <div class="form-group">
                                    <input type="password" value="<%= typeof sifre != 'undefined' ? sifre : ''%>"
                                        name="sifre" class="form-control form-control-user" id="exampleInputEmail"
                                        aria-describedby="emailHelp" placeholder="Şifrenizi girin">
                                </div>
                                <div class="form-group">
                                    <input type="password" value="<%= typeof resifre != 'undefined' ? resifre : ''%>"
                                        name="resifre" class="form-control form-control-user" id="exampleInputEmail"
                                        aria-describedby="emailHelp" placeholder="Şifrenizi tekrar girin">
                                </div>
                                <button class="btn btn-primary btn-user btn-block">
                                    Şifreyi Güncelle
                                </button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="/register">Kullanıcı Oluştur</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="/login">Hesabınız var mı? Giriş Yapın</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>